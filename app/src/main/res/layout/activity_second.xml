<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:alpha="0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/temp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:text="temp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintRight_toRightOf="@id/temp"
        app:layout_constraintLeft_toLeftOf="@id/temp"
        app:layout_constraintTop_toBottomOf="@id/temp" />




            <TextView
                android:id="@+id/wind_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                app:layout_constraintRight_toLeftOf="@id/wind_temp2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wind_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@id/wind_name2"
                app:layout_constraintTop_toTopOf="@id/wind_name2"
                android:textStyle="bold" />

    <!--    aslida blur bo`lishi kerak edi-->


            <TextView
                android:id="@+id/humidity_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/wind_name2"
                app:layout_constraintTop_toBottomOf="@id/wind_name2"
                android:textSize="20sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/humidity_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/wind_temp2"
                app:layout_constraintTop_toTopOf="@id/humidity_name2"
                app:layout_constraintBottom_toBottomOf="@id/humidity_name2"
                android:textSize="20sp"
                android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>